[build]
patch -p1 < "$K/openbox-git.patch"
CFLAGS=-D_GNU_SOURCE LDFLAGS=-lXext ./configure -C \
  --prefix="$butch_prefix" --disable-nls || exit 1
make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1
